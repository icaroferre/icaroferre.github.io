---
import "../styles/globals.css";
const { title, front_image } = Astro.props;
---

<section class="relative w-full h-[40vh] overflow-hidden">
	<!-- Background Image -->
	<div
		class="absolute inset-0 bg-center bg-cover blur-sm"
		style={`background-image: url('${front_image}');`}
	>
	</div>

	<!-- Dark overlay for better text contrast (optional) -->
	<div class="absolute inset-0 bg-black/40"></div>

	<!-- Title -->
	<div class="absolute bottom-8 left-8 text-white z-10">
		<div
			class="text-3xl md:text-5xl font-bold"
			style="font-family: var(--font-header)"
		>
			{title}
		</div>
	</div>
</section>
