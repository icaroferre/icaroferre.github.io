---
import "../styles/globals.css";
const { title } = Astro.props;
---

<div
	class="flex flex-col justify-center md:justify-left bg-black/20 px-6 py-4 space-y-2 drop-shadow-sm"
>
	<div
		class="flex flex-row justify-left"
		style="font-family: var(--font-header)"
	>
		<h1>{title}</h1>
	</div>
	<div
		class="flex flex-row p-4 justify-center center max-h-100 overflow-y-auto overscroll-contain"
	>
		<slot />
	</div>
</div>
